<%= form_for( [@post, @post.comments.build] ) do |f| %>
    <p>
      <%= f.label :commenter, "コメンター" %><br />
      <%= f.text_field :commenter %>
    </p>

    <p>
      <%= f.label :body, "コメントを追加" %><br />
      <%= f.text_area :body, cols: 60, rows: 8 %>
      <div class="hint">文字数入力:<span id="char_rum">0</span></div>
    </p>

  <p>
    <%= f.submit (["コメント投稿"]) %>
  </p>

<% end %>